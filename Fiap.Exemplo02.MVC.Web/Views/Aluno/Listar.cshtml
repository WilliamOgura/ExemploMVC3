@model List<Fiap.Exemplo02.MVC.Web.Models.Aluno>
@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>
@Helper.Message(TempData["msg"], "alert alert-success")

@using (Html.BeginForm("Buscar", "Aluno", FormMethod.Get, new { @class = "form-inline" }))
{
    @Html.TextBox("nomeBusca", "", new { @class = "form-control", placeholder="Digite um nome"})
    @Helper.Submit("Buscar", "btn btn-primary")
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Data de Nascimento</th>
            <th>Bolsa</th>
            <th>Desconto</th>
            <th>Grupo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aluno in Model)
            {
            <tr>
                <td>@aluno.Nome</td>
                <td>@aluno.DataNascimento</td>
                <td>@aluno.Bolsa</td>
                <td>@aluno.Desconto</td>
                <td>@aluno.Grupo.Nome</td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = @aluno.Id }, new { @class = "btn btn-primary" })
                    <button onclick="alunoId.value = @aluno.Id" type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">
                        Excluir
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Confirmação</h4>
            </div>
            <div class="modal-body">
                Realmente deseja apagar o aluno?
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Excluir", "Aluno"))
                {

                    <input type="hidden" id="alunoId" name="alunoId" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-danger">Sim</button>
                }
            </div>
        </div>
    </div>
</div>