@model Fiap.Exemplo02.MVC.Web.Models.Grupo
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Nome do Grupo")
        @Html.TextBoxFor(g => g.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Nome do Projeto")
        @Html.TextBoxFor(g => g.Projeto.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Projeto.Descricao)
        @Html.TextBoxFor(g => g.Projeto.Descricao, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Projeto.DataInicio)
        @Html.TextBoxFor(g => g.Projeto.DataInicio, new { @class = "form-control" })
    </div>
        @Html.TextBoxFor(g => g.Projeto.Id, new { type = "hidden" })
    <div class="form-group">
        @Helper.Submit("Salvar", "btn btn-primary")
    </div>
}